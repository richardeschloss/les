{
  "msgs": {
    "endOfHelp": "End of Help",
    "usage": "usage",
    "servingStaticDir": "serving static dir %1",
    "serverCfgsStarted": "All server configs started",
    "browserOpened": "browser opened",
    "copyingFiles": "Copying files from: %1 to: %2",
    "copiedFiles": "Copied files",
    "writingDeps": "writing dependencies to: %1",
    "packageJsonExists": "%1 already exists...will not overwrite",
    "installingDeps": "Installing deps in %1",
    "doneInit": "Done initializing lesky app! Some notes:",
    "postInitNotes": "1. You might want to init %1 here before continuing (%2)\n2. You might want to add author, project name, version number to %3\n3. You might want different dependencies. Use `%4` to remove unused deps (optional)",
    "writingConfig": "writing config to new %1 file: %2",
    "configExists": "%1 already exists...will not overwrite",
    "errIncorrectRangeFmt": "port range incorrectly formatted. Format as --%1=start - end"
  },
  "options": {
    "help": {
      "alias": "h",
      "desc": "Print this help menu"
    },
    "init": {
      "alias": "i",
      "desc": "Init lesky in workspace specified by path, defaults to cwd",
      "dflt": "[cwd]"
    },
    "host": {
      "alias": "a",
      "desc": "Address to use",
      "dflt": "localhost"
    },
    "port": {
      "alias": "p",
      "desc": "Port to use",
      "dflt": 8080
    },
    "proto": {
      "desc": "Protocol to use",
      "dflt": "http",
      "limitTo": "{ http, https, http2 }"
    },
    "range": {
      "desc": "Port Range (in case port is taken). Format as start-end",
      "dflt": [8000, 9000]
    },
    "sslKey": {
      "desc": "Path to SSL Key"
    },
    "sslCert": {
      "desc": "Path to SSL Certificate"
    },
    "open": {
      "alias": "o",
      "desc": "Open browser",
      "dflt": "OS default"
    },
    "watch": {
      "alias": "w",
      "desc": "Watch for file changes in dir [staticDir]" 
    }
  }
}