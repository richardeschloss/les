{
  "help": {
    "alias": "h",
    "desc": "Print this help menu"
  },
  "init": {
    "alias": "i",
    "desc": "Init lesky in workspace specified by path, defaults to cwd",
    "dflt": "[cwd]"
  },
  "host": {
    "alias": "a",
    "desc": "Address to use",
    "dflt": "localhost"
  },
  "port": {
    "alias": "p",
    "desc": "Port to use",
    "dflt": 8080
  },
  "proto": {
    "desc": "Protocol to use",
    "dflt": "http",
    "limitTo": "{ http, https, http2 }"
  },
  "range": {
    "desc": "Port Range (in case port is taken)",
    "dflt": [8000, 9000]
  },
  "sslKey": {
    "desc": "Path to SSL Key"
  },
  "sslCert": {
    "desc": "Path to SSL Certificate"
  },
  "open": {
    "alias": "o",
    "desc": "Open browser",
    "dflt": "OS default"
  },
  "watch": {
    "alias": "w",
    "desc": "Watch for file changes in dir [staticDir]" 
  }
}
