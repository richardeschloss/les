{
  "name": "lesky",
  "version": "2.0.0",
  "description": "Lightweight Express-ish (Koa) Server - Type les not More!",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon les.js",
    "build": "babel utils.js server.js io.js les.js -d bin && chmod u+x bin/les.js",
    "start": "babel-node les.js",
    "test:cov": "npm run test:unit:cov && npm run test:e2e:cov",
    "test:watch": "TEST=specs ava --watch",
    "test:e2e:watch": "ava --config e2e.config.js --colors --watch",
    "test:e2e:cov": "nyc --no-clean ava --timeout=10m --config e2e.config.js --colors",
    "test:unit": "TEST=specs ava --config unit.config.js --colors",
    "test:unit:watch": "TEST=specs ava --config unit.config.js --colors --watch",
    "test:unit:cov": "TEST=specs nyc ava --config unit.config.js --colors",
    "test:cov:watch": "TEST=specs nyc ava --watch",
    "kill:node": "pkill node",
    "deploy:local": "cp -r bin/* ~/.npm-global/lib/node_modules/lesky/bin",
    "deploy:public": "npm run build && npm publish",
    "git:push": "git push origin HEAD"
  },
  "bin": {
    "les": "./les.js"
  },
  "files": [
    "channels",
    "locales/en.json",
    "public",
    "test",
    ".editorconfig",
    ".eslintrc.js",
    ".gitignore",
    ".lesrc",
    "app.js",
    "ava.config.js",
    "io.js",
    "LICENSE",
    "server.js",
    "utils.js"
  ],
  "keywords": [
    "les",
    "koajs",
    "server",
    "cli",
    "expressjs"
  ],
  "author": "Richard Schloss",
  "license": "MIT",
  "dependencies": {
    "gently-copy": "^3.2.0",
    "glob": "^7.1.6",
    "koa": "^2.13.1",
    "koa-static": "^5.0.0",
    "les-utils": "file:../les-utils",
    "minimist": "^1.2.5",
    "node-netstat": "^1.8.0",
    "socket.io": "^4.0.0"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "c8": "^7.6.0",
    "eslint": "^7.22.0",
    "nodemon": "^2.0.7"
  }
}
